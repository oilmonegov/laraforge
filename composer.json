{
    "name": "oilmonegov/laraforge",
    "description": "AI-first project scaffolding framework with Claude Code, Cursor, and VS Code support",
    "keywords": [
        "laraforge",
        "scaffolding",
        "claude",
        "ai",
        "mcp",
        "cursor",
        "vscode"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Chuks",
            "email": "chuks@oilmonegov.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "laravel/prompts": "^0.3",
        "symfony/console": "^7.0",
        "symfony/filesystem": "^8.0",
        "symfony/finder": "^7.0",
        "symfony/yaml": "^8.0"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "phpstan/phpstan": "^2.0",
        "laravel/pint": "^1.18"
    },
    "autoload": {
        "psr-4": {
            "LaraForge\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LaraForge\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/laraforge"
    ],
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "pest",
        "lint": "pint",
        "analyse": "phpstan analyse"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        }
    }
}
