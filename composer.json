{
    "name": "oilmonegov/laraforge",
    "description": "AI-first project scaffolding framework with Claude Code, Cursor, and VS Code support",
    "keywords": [
        "laraforge",
        "scaffolding",
        "claude",
        "ai",
        "mcp",
        "cursor",
        "vscode"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Chuks",
            "email": "chuks@oilmonegov.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "laravel/prompts": "^0.3",
        "symfony/console": "^7.0",
        "symfony/filesystem": "^7.0",
        "symfony/finder": "^7.0",
        "symfony/process": "^7.0",
        "symfony/yaml": "^7.0"
    },
    "require-dev": {
        "infection/infection": "^0.29",
        "laravel/pint": "^1.18",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-arch": "^4.0",
        "pestphp/pest-plugin-browser": "^4.0",
        "pestphp/pest-plugin-stressless": "^4.0",
        "phpstan/phpstan": "^2.0",
        "rector/rector": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "LaraForge\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LaraForge\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/laraforge"
    ],
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "infection/extension-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "pest",
        "test:unit": "pest --testsuite=Unit",
        "test:feature": "pest --testsuite=Feature",
        "test:arch": "pest --testsuite=Arch",
        "test:property": "pest --testsuite=Property",
        "test:stress": "pest --testsuite=Stress",
        "test:browser": "pest --testsuite=Browser",
        "test:coverage": "pest --coverage --min=80",
        "test:all": "pest --testsuite=Unit,Feature,Arch,Property,Stress",
        "mutate": "infection --min-msi=70 --min-covered-msi=80 --threads=4",
        "refactor": "rector process",
        "refactor:dry": "rector process --dry-run",
        "lint": "pint",
        "lint:fix": "pint",
        "analyse": "phpstan analyse",
        "ci": [
            "@lint",
            "@analyse",
            "@test:all"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        }
    }
}
